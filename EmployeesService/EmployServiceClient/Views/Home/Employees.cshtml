@section style
{
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    
    
    <style>


    </style>

}




<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>EmployeeId</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>Title</td>
        </tr>
    </thead>
</table>



@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="//cdn.datatables.net/fixedheader/3.2.4/js/dataTables.fixedHeader.min.js"></script>

    <script>
        var webApiBaseAddr = "https://localhost:7131";
        $(document).ready(function(){
            $("table").dataTable({
                ajax:{
                    type:"GET",
                    url: `${webApiBaseAddr}/api/Employees`,
                    dataSrc:function(data){return data;},
                },
                columns:[
                    { "data": "employeeId", "width": "25%" },
                    { "data": "firstName", "width": "25%" },
                    { "data": "lastName", "width": "25%" },
                    { "data": "title", "width": "25%" },
                ],
                fixedHeader:{
                    Headers:true
                },
                language:{
                    url: "//cdn.datatables.net/plug-ins/1.13.2/i18n/zh-HANT.json"
                }
            });
        });

    </script>

}